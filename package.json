{
  "version": "0.0.0-development",
  "name": "oh-my-log",
  "description": "Beautiful console logs for your console applications with native string substitution",
  "author": "Ahmad Nassri <ahmad@ahmadnassri.com> (https://www.ahmadnassri.com/)",
  "homepage": "https://github.com/ahmadnassri/oh-my-log",
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmadnassri/oh-my-log.git"
  },
  "license": "ISC",
  "main": "lib/index.js",
  "keywords": [
    "cli",
    "console",
    "info",
    "log"
  ],
  "engines": {
    "node": ">=4"
  },
  "files": [
    "lib",
    "src"
  ],
  "bugs": {
    "url": "https://github.com/ahmadnassri/oh-my-log/issues"
  },
  "scripts": {
    "compile": "babel -q src",
    "test": "BABEL_ENV=test tap test/*.js --reporter spec --node-arg=--require --node-arg=babel-register",
    "pretest": "snazzy && echint",
    "coverage": "BABEL_ENV=test tap test/*.js --coverage --nyc-arg=--require --nyc-arg=babel-register",
    "codeclimate": "nyc report --reporter=text-lcov | codeclimate-test-reporter",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "standard": {
    "ignore": [
      "lib/**"
    ]
  },
  "echint": {
    "ignore": [
      "lib/**"
    ]
  },
  "config": {
    "oh-my-log": {
      "date": "isoTime",
      "prefix": "[%name:red] %date:blue:"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "0.0.8",
    "babel-register": "^6.18.0",
    "codeclimate-test-reporter": "^0.4.0",
    "cz-conventional-changelog": "^1.2.0",
    "echint": "^1.5.3",
    "semantic-release": "^6.3.2",
    "snazzy": "^5.0.0",
    "tap": "^8.0.1"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "dateformat": "^1.0.12",
    "debug-log": "^1.0.1",
    "extend": "^3.0.0",
    "furmat": "^0.2.0"
  }
}
